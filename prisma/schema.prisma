generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SceneStatus {
  draft
  generating
  ready
  error
}

enum JobStatus {
  queued
  running
  ready
  error
}

enum OmniRefStatus {
  pending
  generating
  ready
  error
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]
  stylePacks StylePack[] @relation("UserStylePacks")
  accounts  Account[]
  sessions  Session[]
}

model Project {
  id            String   @id @default(cuid())
  userId        String
  title         String
  stylePresetId String?
  stylePackId   String?  @unique
  transcriptRaw Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User              @relation(fields: [userId], references: [id])
  stylePreset   StylePreset?      @relation(fields: [stylePresetId], references: [id])
  stylePack     StylePack?        @relation("ProjectActiveStylePack", fields: [stylePackId], references: [id])
  audioAsset    AudioAsset?
  transcript   TranscriptRow[]
  scenes       Scene[]
  exports      ExportRender[]
  characters   CharacterReference[]
  stylePacks   StylePack[]        @relation("ProjectStylePacks")
  styleRefs    StyleRef[]

  @@index([userId])
}

model AudioAsset {
  id             String   @id @default(cuid())
  projectId      String   @unique
  originalUrl    String
  editedUrl      String?
  durationSec    Float?
  trimStartSec   Float?
  trimEndSec     Float?
  fadeInSec      Float?
  fadeOutSec     Float?
  waveformUrl    String?
  waveformData   Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  project        Project  @relation(fields: [projectId], references: [id])
}

model TranscriptRow {
  id        String   @id @default(cuid())
  projectId String
  tSec      Int
  text      String
  words     Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id])

  @@unique([projectId, tSec])
  @@index([projectId])
}

model Scene {
  id                 String      @id @default(cuid())
  projectId          String
  index              Int
  startMs            Int
  endMs              Int
  transcriptSpanText String
  focalPoint         String
  promptText         String
  stylePresetId      String?
  characterRefId     String?
  status             SceneStatus @default(draft)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  project            Project             @relation(fields: [projectId], references: [id])
  stylePreset        StylePreset?        @relation(fields: [stylePresetId], references: [id])
  characterRef       CharacterReference? @relation(fields: [characterRefId], references: [id])
  imageRuns          ImageGenerationRun[]
  imageCandidates    ImageCandidate[]
  animationClips     AnimationClip[]

  @@index([projectId])
}

model ImageGenerationRun {
  id            String   @id @default(cuid())
  sceneId       String
  provider      String
  providerJobId String
  status        JobStatus @default(queued)
  version       Int
  reason        String?
  isActive      Boolean @default(true)
  createdAt     DateTime @default(now())

  scene         Scene    @relation(fields: [sceneId], references: [id])
  candidates    ImageCandidate[]

  @@index([sceneId])
}

model ImageCandidate {
  id            String   @id @default(cuid())
  sceneId       String
  runId         String
  url           String?
  providerJobId String
  lumaGenerationId String?
  isSelected    Boolean  @default(false)
  status        JobStatus @default(queued)
  failureReason String?
  createdAt     DateTime @default(now())

  scene         Scene              @relation(fields: [sceneId], references: [id])
  run           ImageGenerationRun @relation(fields: [runId], references: [id])
  animationClips AnimationClip[]

  @@index([sceneId])
}

model AnimationClip {
  id              String   @id @default(cuid())
  sceneId         String
  imageCandidateId String
  providerJobId   String
  lumaGenerationId String?
  url             String?
  durationSec     Float?
  status          JobStatus @default(queued)
  failureReason   String?
  resolution      String?
  createdAt       DateTime @default(now())

  scene           Scene          @relation(fields: [sceneId], references: [id])
  imageCandidate  ImageCandidate @relation(fields: [imageCandidateId], references: [id])
}

model ExportRender {
  id         String    @id @default(cuid())
  projectId  String
  status     JobStatus @default(queued)
  outputUrl  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  project    Project   @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model StylePreset {
  id           String   @id @default(cuid())
  name         String
  suffixTag    String
  defaultParams Json?
  createdAt    DateTime @default(now())

  projects     Project[]
  scenes       Scene[]
  omniRefs     CharacterOmniRef[]
  omniVariants CharacterOmniVariant[]
}

model CharacterReference {
  id              String   @id @default(cuid())
  projectId       String
  name            String
  descriptionPrompt String?
  imageUrls       Json?
  providerRefId   String?
  providerTokens  Json?
  lumaIdentityKey String?
  createdAt       DateTime @default(now())

  project         Project @relation(fields: [projectId], references: [id])
  scenes          Scene[]
  omniRefs        CharacterOmniRef[]
  omniVariants    CharacterOmniVariant[]
}

model CharacterOmniVariant {
  id              String    @id @default(cuid())
  omniRefId       String?
  characterId     String
  stylePresetId   String
  index           Int?
  status          JobStatus @default(queued)
  imageUrl        String?
  lumaGenerationId String?
  failureReason   String?
  isSelected      Boolean   @default(false)
  promptUsed      String?
  modelUsed       String?
  aspectRatio     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  character       CharacterReference @relation(fields: [characterId], references: [id])
  omniRef         CharacterOmniRef?  @relation(fields: [omniRefId], references: [id])
  stylePreset     StylePreset        @relation(fields: [stylePresetId], references: [id])

  @@index([characterId])
  @@index([omniRefId])
  @@index([stylePresetId])
}

model CharacterOmniRef {
  id            String        @id @default(cuid())
  characterId   String
  stylePresetId String
  selectedVariantId String?
  status        OmniRefStatus @default(pending)
  imageUrl      String?
  providerJobId String?
  promptText    String?
  errorMessage  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  character     CharacterReference @relation(fields: [characterId], references: [id])
  stylePreset   StylePreset        @relation(fields: [stylePresetId], references: [id])
  variants      CharacterOmniVariant[]

  @@unique([characterId, stylePresetId])
  @@index([stylePresetId])
}

model StylePack {
  id           String   @id @default(cuid())
  projectId    String?
  ownerUserId  String?
  name         String
  isGlobal     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  project      Project? @relation("ProjectStylePacks", fields: [projectId], references: [id])
  activeFor    Project? @relation("ProjectActiveStylePack")
  owner        User?    @relation("UserStylePacks", fields: [ownerUserId], references: [id])
  styleRefs    StyleRef[]

  @@index([projectId])
  @@index([ownerUserId])
  @@index([isGlobal])
}

model StyleRef {
  id         String   @id @default(cuid())
  projectId  String?
  stylePackId String?
  name       String?
  imageUrl   String
  weight     Float   @default(0.8)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  project    Project?  @relation(fields: [projectId], references: [id])
  stylePack  StylePack? @relation(fields: [stylePackId], references: [id])

  @@index([projectId])
  @@index([stylePackId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
